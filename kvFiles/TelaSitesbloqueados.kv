<TelaSites_Bloq>
    name: "sites_bloqueados"
    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_light if app.theme_cls.theme_style == 'Light' else app.theme_cls.bg_dark
        MDFloatLayout:
            size_hint: 1, 0.95
            MDSliverAppbar:
                size_hint: 1, 1.35
                MDSliverAppbarContent:
                    id: content
                    md_bg_color: app.theme_cls.bg_light if app.theme_cls.theme_style == 'Light' else app.theme_cls.bg_dark
                    orientation: "vertical"
                    padding: "15dp"
                    spacing: "12dp"
                    adaptive_height: True
                
        # TELA DA BARRA LATERAL
        MDTopAppBar:
            title: "Sites Bloqueados"
            anchor_title: "left"
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x:root.update_configs()]]
            right_action_items: [["account", lambda x:root.user_bloq_info()], ["help", lambda x: root.ajuda()]]
        
        MDTextField:
            id: text_field_search
            icon_right: "magnify"
            hint_text: "Pesquisar aplicativo"
            font_size: '16dp'
            bold: True
            size_hint: 0.79, None
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            on_text: root.get_text(self.text)
            on_text_validate: root.search_item(self.text)

        MDRaisedButton:
            opacity: 0
            size_hint: None, None
            size: 50,40
            pos_hint: {"center_x": 0.835, "center_y": 0.864}
            on_release: root.pesquisar()
        
        MDFloatingActionButton:
            icon: "plus"
            pos_hint: {"center_x": 0.9, "center_y": 0.05}
            on_release: root.add_site()