<TelaSites_config>
    name: 'sites_config'
    MDBoxLayout:
        orientation: 'vertical'  # Defina a orientação como vertical para manter a ordem
        MDFloatLayout:
            # TELA DA BARRA LATERAL
            MDTopAppBar:
                title: "Configurações do Site"
                anchor_title: "left"
                pos_hint: {"top": 1}
                left_action_items: [["arrow-left", lambda x:root.voltar()]]

            # Opção Bloqueado da janela de lista de aplicativos
            MDBoxLayout:
                adaptive_width: True
                adaptive_height: True
                size_hint_y: 0.08
                # pos_hint: {"center_x": 0.22, "center_y": 0.85}
                padding: 5,0,0,0
                pos_hint: {"center_y": 0.85}
                MDCheckbox:
                    id: check_1
                    size_hint: None, None
                    size: "48dp", "48dp"
                    on_release: root.checkbox_group(self)
                MDLabel:
                    padding: 0, "4dp", 0, 0
                    text: "Bloqueado"
                    adaptive_width: True

            # Barra que sinaliza o espaço e a divisão dos grupos de widgets
            MDBoxLayout:
                size_hint: None, None
                size: "320dp", "2dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
